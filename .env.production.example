# Database
# Update with your VPS database path or connection string
DATABASE_URL=sqlite:///./altayarvip.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# JWT Configuration
# CRITICAL: Generate new secure keys for production!
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
# CRITICAL: Generate new secure keys for production!
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
# Allow requests from your mobile app and administration panel
BACKEND_CORS_ORIGINS=["*"]

# Fawaterk Payment Gateway
FAWATERK_API_KEY=your_production_api_key
FAWATERK_VENDOR_KEY=your_production_vendor_key
FAWATERK_PROVIDER_KEY=your_production_provider_key
FAWATERK_BASE_URL=https://app.fawaterk.com/api/v2
FAWATERK_TEST_MODE=false

# Application URLs
# Update with your VPS IP or Domain
APP_BASE_URL=https://api.altayarvip.sbs
PAYMENT_SUCCESS_URL=https://api.altayarvip.sbs/payment/success
PAYMENT_FAIL_URL=https://api.altayarvip.sbs/payment/fail

# Application Settings
APP_NAME=AltayarVIP
APP_VERSION=1.0.0
API_V1_PREFIX=/api
DEBUG=false

# Email
EMAILS_FROM_EMAIL=noreply@altayarvip.com
EMAILS_FROM_NAME=AltayarVIP

# Currency & Localization
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=["USD","EUR","SAR","EGP"]
DEFAULT_CURRENCY_USD_ENABLED=false
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=["ar","en"]

# Tax
DEFAULT_TAX_RATE=14.0

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
