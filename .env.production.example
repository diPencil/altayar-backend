# Database Settings
# For VPS using SQLite, use a relative path like this:
DATABASE_URL=sqlite:///./altayarvip.db

# JWT Configuration
# CRITICAL: These must be unique and secure for production!
JWT_SECRET_KEY=PLACEHOLDER_FOR_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Security Settings
# CRITICAL: This must be set for production!
SECRET_KEY=PLACEHOLDER_FOR_SECURE_RANDOM_STRING
BACKEND_CORS_ORIGINS=["*"]

# Fawaterk Payment Gateway
# Update these with your real production keys from Fawaterk dashboard.
# (You mentioned these are already correct in your production .env)
FAWATERK_API_KEY=your_real_api_key
FAWATERK_VENDOR_KEY=your_real_vendor_key
FAWATERK_PROVIDER_KEY=your_real_provider_key
FAWATERK_BASE_URL=https://app.fawaterk.com/api/v2
FAWATERK_TEST_MODE=false

# Application URLs
# This is set to your production domain
APP_BASE_URL=https://api.altayarvip.sbs
PAYMENT_SUCCESS_URL=https://api.altayarvip.sbs/payment/success
PAYMENT_FAIL_URL=https://api.altayarvip.sbs/payment/fail

# Application Settings
APP_NAME=AltayarVIP
APP_VERSION=1.0.0
API_V1_PREFIX=/api
DEBUG=false

# Email Settings (Optional)
EMAILS_FROM_EMAIL=noreply@altayarvip.com
EMAILS_FROM_NAME=AltayarVIP

# Currency & Localization
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=["USD","EUR","SAR","EGP"]
DEFAULT_CURRENCY_USD_ENABLED=false
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=["ar","en"]

# Tax & Pagination
DEFAULT_TAX_RATE=14.0
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
